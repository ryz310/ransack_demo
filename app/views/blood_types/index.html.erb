<h1>Listing blood_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blood_types.each do |blood_type| %>
      <tr>
        <td><%= blood_type.name %></td>
        <td><%= link_to 'Show', blood_type %></td>
